# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# MySQL (source of truth for migrations)
# Internal Docker network host (shared network): mysql-db
DATABASE_URL=mysql+pymysql://root:root@mysql-db:3306/marketplace

# Storage Configuration
STORAGE_MODE=local

# MongoDB
MONGODB_URL=mongodb://mongo-db:27017
MONGODB_DATABASE=marketplace

# Neo4j  
NEO4J_URL=bolt://neo4j-db:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_pass
